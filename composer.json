{
    "name": "nhrfm/file-manager",
    "description": "Browse and edit WordPress files with ease. Modern React-powered file manager.",
    "type": "wordpress-plugin",
    "license": "GPLv2",
    "authors": [
        {
            "name": "Nhrrob",
            "email": "admin@admin.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Nhrfm\\FileManager\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "deploy": "composer install --no-dev && wp dist-archive . && composer install",
        "dev": "composer install",
        "build": "composer install --no-dev"
    },
    "require-dev": {
        "pestphp/pest": "4.x-dev"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}